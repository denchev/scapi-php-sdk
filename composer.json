{
    "name": "denchev/scapi-php-sdk",
    "description": "An SDK for PHP to connect and work with Salesforce Commerce API",
    "type": "library",
    "license": "MIT",
    "version": "0.0.1-alpha",
    "keywords": [
        "salesforce commerce api",
        "scapi"
    ],
    "authors": [
        {
            "name": "Marush Denchev",
            "email": "marush.denchev@gmail.com"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "guzzlehttp/guzzle": "^7.4",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "ext-xml": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "ScapiPHP\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ScapiPHP\\Test\\": "tests/"
        }
    }
}
